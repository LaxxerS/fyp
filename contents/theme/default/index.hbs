{{!< default}}

<header class="site-header" style="background-image: url(./x/shared/img/{{blog_cover}})">
    <div class="overlay"></div>
    <div class="vertical">
        <div class="site-header-content inner">
        <h1 class="blog-title">{{blog_title}}</h1>
        <h2 class="blog-description">{{blog_description}}</h2>
        </div>
    </div>
</header>


<main class="posts" role="main">

    {{#each posts}}

    <article class="post-wrapper">

        <h3 class="post-title"><a href="{{slug}}/">{{title}}</a></h3>

        <section class="post-content">
            <p>{{excerpt}}&hellip;</p>
            <p><a href="{{slug}}/">Read More &#187;</a></p>
        </section>

        <section class="post-footer">
            <img class="rounded small" src="/x/shared/img/{{#if author.image}}{{author.image}}{{else}}default.png{{/if}}">
            <span class="author">{{author.name}}</span>
            <span class="post-readtime"><a href="{{slug}}/">{{reading_time}}</a></span>
        </section>
    </article>

    {{/each}}

</main>