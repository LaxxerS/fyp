<form id="login" class="login-form" method="post" novalidate="novalidate">
    <div class="email-wrap">
        <input class="name" type="text" placeholder="Full Name" name="name" autocapitalize="off" autocomplete="off" spellcheck="false" autofocus />
        <input class="email" type="email" placeholder="Email Address" name="email" autocapitalize="off" autocomplete="off" spellcheck="false"  />
    </div>
    <div class="password-wrap">
        <input class="username" type="text" placeholder="Username" name="username" autocapitalize="off" autocomplete="off" spellcheck="false"/>
        <input class="password" type="password" placeholder="Password" name="password"/>
    </div>
    <button class="btn btn-primary" type="submit">Sign Up</button>
</form>
