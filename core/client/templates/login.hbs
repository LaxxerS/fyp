<form id="login" class="login-form" method="post" novalidate="novalidate" action="/admin/signin/">
    <div class="email-wrap">
        <input class="email" type="email" placeholder="Email Address" name="email" autocapitalize="off" autocomplete="off" spellcheck="false" autofocus />
    </div>
    <div class="password-wrap">
        <input class="password" type="password" placeholder="Password" name="password"/>
    </div>
    <button class="btn btn-primary" type="submit">Login</button>
    <section class="meta">
        <a class="forgotten-password" href="#">Forgotten password?</a>
    </section>
</form>
